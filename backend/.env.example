# backend/.env.example
# Application Settings
DEBUG=true
ENVIRONMENT=development
SECRET_KEY=your-secret-key-change-in-production

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/shuscribe
SKIP_DATABASE=false # Set to 'true' to skip database connection and initialization at startup

# CORS Settings
ALLOWED_ORIGINS='["http://localhost:3000", "http://127.0.0.1:3000"]'

# Self-hosted Portkey Gateway Configuration
PORTKEY_BASE_URL=http://localhost:8787/v1

# Security - 32-character key for Fernet encryption (used for API keys)
ENCRYPTION_KEY=your-32-character-encryption-key-123

# Logging
LOG_LEVEL=INFO